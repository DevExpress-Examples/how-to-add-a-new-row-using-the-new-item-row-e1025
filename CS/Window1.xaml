    <!--region #Window-->
    <DockPanel LastChildFill="True">
         <dxg:GridControl x:Name="grid" AutoPopulateColumns="True">
            <dxg:GridControl.View>
                <dxg:TableView x:Name="view" AutoWidth="True" NewItemRowPosition="Top" />
            </dxg:GridControl.View>
        </dxg:GridControl>
    </DockPanel>
    <!--endregion #Window-->
</Window>

